<application>
<name>vView </name>

<dependencies>	
</dependencies>

<module>
   <name>aexGrabber</name>
   <node>pc104</node>
</module>

<module>
   <name>vUndistortCam</name>
   <parameters> --name vUndistortCam --sensorHeight 128 --sensorWidth 128 --truncate true </parameters>
   <node>localhost</node>
</module>

<module>
   <name>eventClustering</name>
   <parameters> --decay_tau 15000 --Tact 20 --Tinact 5 --Tfree 5 --Maxdist 8 --Tevent 0.5 </parameters>
   <node>localhost</node>
</module>

<module>
    <name> vFramer</name>
    <parameters> --frameRate 30 --eventWindow 0.1 --displays "(0 left (AE CLE) 1 right (AE CLE))"</parameters>
    <node>localhost</node>
</module>

<module>
    <name> eventAnalysis</name>
    <parameters> --name ESD --dir $HOME/workspace/results/esd/"</parameters>
    <node>localhost</node>
</module>

<module>
    <name> autoSaccade </name>
    <parameters> --name autoSaccade --robot icub --checkPeriod 0.5 --minVpS 800 --sVel 1000 --sMag 2</parameters>
    <node>localhost</node>
</module>

<module>
    <name> dataDumper </name>
    <parameters> --name /datadumper/experimenttype/experimentnumber/ </parameters>
    <node> localhost </node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh0 --x 000 --y 000 --RefreshTime 33 </parameters>
   <node>localhost</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh1 --x 500 --y 000 --RefreshTime 33 </parameters>
   <node>localhost</node>
</module>


<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/vUndistortCam/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/autoSaccade/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/datadumper/experimenttype/experimentnumber/</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/vFramerModule/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramerModule/left</from>
  <to>/viewCh0</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramerModule/right</from>
  <to>/viewCh1</to>
  <protocol>udp</protocol>
</connection>



</application>
