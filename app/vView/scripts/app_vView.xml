<application>
<name>vView </name>

<dependencies>	
</dependencies>

<module>
   <name>aexGrabber</name>
   <node>pc104</node>
</module>

<module>
   <name>dPepper</name>
   <parameters> --name dPepper --temporalSize 10000 --spatialSize 1</parameters>
   <node>localhost</node>
</module>

<module>
   <name>vUndistortCam</name>
   <parameters> --name vUndistortCam --sensorHeight 128 --sensorWidth 128 --truncate true </parameters>
   <node>localhost</node>
</module>

<module>
   <name>eventClustering</name>
   <parameters> --decay 15000 --tAct 20 --tInact 5 --tFree 5 --maxDist 8 --tEvent 0.5 </parameters>
   <node>localhost</node>
</module>

<module>
    <name> vtsOptFlow </name>
    <parameters> --name vtsOptFlow --height 128 --width 128 --filterSize 5 --tWindow 30000 --minEvtsThresh 5 --minSobelsThresh 3</parameters>
    <node> localhost </node>
</module>

<module>
    <name> eventAnalysis</name>
    <parameters> --name ESD --dir $HOME/workspace/results/esd/</parameters>
    <node>localhost</node>
</module>

<module>
    <name> autoSaccade </name>
    <parameters> --name autoSaccade --robot icub --checkPeriod 0.5 --minVpS 800 --sVel 1000 --sMag 2</parameters>
    <node>localhost</node>
</module>

<module>
    <name> dataDumper </name>
    <parameters> --name /datadumper/experimenttype/experimentnumber/ </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vFramer</name>
    <parameters> --frameRate 60 --eventWindow 0.02 --displays "(0 left (SURF OFE) 1 right (SURF OFE))"</parameters>
    <node>localhost</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh0 --x 000 --y 000 --RefreshTime 16 </parameters>
   <node>localhost</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh1 --x 500 --y 000 --RefreshTime 16 </parameters>
   <node>localhost</node>
</module>


<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/vtsOptFlow/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vtsOptFlow/vBottle:o</from>
  <to>/vFramerModule/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/autoSaccade/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/datadumper/experimenttype/experimentnumber/</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vFramerModule/left</from>
  <to>/viewCh0</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFramerModule/right</from>
  <to>/viewCh1</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/temp:o</from>
  <to>/temp:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/temp:o</from>
  <to>/temp:i</to>
  <protocol>tcp</protocol>

</connection>



</application>
