<application>
<name> vBallDemo </name>

<module>
   <name>aexGrabber</name>
   <node>pc104</node>
</module>

<module>
    <name> simCartesianControl </name>
    <node> localhost </node>
</module>

<module>
    <name> iKinCartesianSolver </name>
    <parameters> --context simCartesianControl --part right_arm </parameters>
    <node> localhost </node>
</module>

<module>
    <name> iKinCartesianSolver </name>
    <parameters> --context simCartesianControl --part left_arm </parameters>
    <node> localhost </node>
</module>

<module>
    <name> iKinGazeCtrl </name>
    <parameters> --robot icub </parameters>
    <node> localhost </node>
</module>

<module>
    <name> demoGraspManager </name>
        <parameters> --general::robot icubSim </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vtsOptFlow </name>
    <parameters> --name vtsOptFlow --height 128 --width 128 --filterSize 5 --tWindow 50000 --minEvtsThresh 4 --minSobelsThresh 4 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vCircle </name>
    <parameters> --inlierThreshold 20 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vTrackToRobot </name>
    <parameters> --name vTrackToRobot --method gaze </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vFramer</name>
    <parameters> --frameRate 60 --eventWindow 0.2 --displays "(0 left (AE CIRC OFE))"</parameters>
    <node>localhost</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh0 --x 000 --y 000 --RefreshTime 16 </parameters>
   <node>localhost</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /viewCh1 --x 500 --y 000 --RefreshTime 16 </parameters>
   <node>localhost</node>
</module>

<connection>
  <from>/aexGrabber/vBottle:o</from>
  <to>/vtsOptFlow/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vtsOptFlow/vBottle:o</from>
  <to>/vCircleFinder/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vCircleFinder/vBottle:o</from>
  <to>/vTrackToRobot/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
    <from> /vTrackToRobot/Bottle:o </from>
    <to>   /demoGraspManager/trackTarget:i </to>
</connection>

<connection>
  <from>/vCircleFinder/vBottle:o</from>
  <to>/vFramerModule/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFramerModule/left</from>
  <to>/viewCh0</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFramerModule/right</from>
  <to>/viewCh1</to>
  <protocol>tcp</protocol>
</connection>



</application>
