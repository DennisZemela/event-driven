<application>
<name> vPFBallDemo </name>

<module>
    <name> demoRedBall </name>
        <parameters>  </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> vParticleFilter </name>
    <parameters> --name /vpf --realtime true --adaptive false --particles 50 --randoms 0.00 --variance 2.0 --obsthresh 20.0 --height 240 --width 304 </parameters>
    <node> icub23 </node>
</module>

<module>
   <name> yarpview </name>
   <parameters>--name /viewTracker --x 500 --y 000 --RefreshTime 33 --compact </parameters>
   <node> icub23 </node>
</module>

<module>
    <name> yarpscope </name>
    <parameters> --remote /vpf/scope:o --index "(0 1 2 3)" --color "(red blue green black)" </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> vTrackToRobot </name>
    <parameters> --name vTrackToRobot --method gaze --demo grasp </parameters>
    <node> icub23 </node>
</module>

<module>
    <name> vFramer </name>
    <parameters> --name /vFramer --displays "(1 left (AE CIRC ISO))" --height 240 --width 304 </parameters>
    <node>icub24</node>
</module>

<module>
   <name>yarpview</name>
   <parameters> --name /viewISO --x 700 --y 200 --h 800 --w 750 --RefreshTime 33 --compact </parameters>
   <node> icub24 </node>
</module>

<connection>
  <from>/zynqGrabber/vBottle:o</from>
  <to>/vpf/vBottle:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vpf/debug:o</from>
  <to>/viewTracker</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vFramer/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vFramer/left</from>
  <to>/viewISO</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/vpf/vBottle:o</from>
  <to>/vTrackToRobot/vBottle:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
    <from> /vTrackToRobot/vCartOut:o </from>
    <to>   /demoRedBall/trackTarget:i </to>
</connection>

<connection>
  <from>/demoRedBall/cmdFace:rpc</from>
  <to>/icub/face/emotions/in</to>
  <protocol>tcp</protocol>
</connection>



</application>
